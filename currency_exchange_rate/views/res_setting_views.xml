<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.currency.exchange.rate</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="account.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@id='update_currency_live']" position="after">
        <div class="row">
          <label string="Interval" for="currency_update_interval" class="col-lg-3 o_light_label"/>
          <field name="currency_update_interval"/>
        </div>
        <div class="row">
          <label string="Last Sync Date" for="currency_last_sync" class="col-lg-3 o_light_label"/>
          <button name="manual_currency_update" type="object" class="btn-link">
            <i title="Update now" role="img" aria-label="Update now" class="fa fa-fw fa-refresh"></i>
          </button>
        </div>
      </xpath>
    </field>
  </record>
</odoo>
