<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="login_extension" name="Login" inherit_id="web.login">
        <xpath expr="//t/form/div[hasclass('field-password')]" position="after">
            <div t-if="debug" class="form-group field-ticket">
                <label for="login-reason">Ticket ID</label>
                <input type="text" placeholder="Ticket #" name="ticket_ID" t-att-value="ticket_ID"
                       id="ticket_ID"
                       t-attf-class="form-control #{'form-control-sm' if form_small else ''}"/>
            </div>
            <div t-if="debug" class="form-group field-login-reason">
                <label for="login-reason">Login reason</label>
                <input type="text" placeholder="Login-reason" name="login_reason" t-att-value="login_reason"
                       id="login_reason"
                       t-attf-class="form-control #{'form-control-sm' if form_small else ''}"/>
            </div>
            <!--<div t-if="debug" class="form-group field-session-length">-->
            <!--<label for="session_length">Session length</label>-->
            <!--<input type="text" placeholder="Session length" name="session_length" value="15"-->
            <!--id="session_length" required="required"-->
            <!--t-attf-class="form-control #{'form-control-sm' if form_small else ''}"/>-->
            <!--</div>-->
        </xpath>

    </template>


    <template id="wrong_input_400">
        <t t-call="web.login_layout">
            <div id="wrap">
                <div class="container">
                    <h1 class="mt32">400: Invalid Input</h1>
                    <p class="alert alert-danger" t-if="error" role="alert">
                    Please Make sure you have entered Ticket # and Login reason on debug mode.
                    </p>
                </div>
            </div>
        </t>
    </template>

</odoo>