<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_move_invoice_skf_tree_view" model="ir.ui.view">
            <field name="name">account.move.invoice.skf.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_partner_display_name'][1]" position="replace">
                    <field name="invoice_partner_display_name" attrs="{'column_invisible': True}"/>
                </xpath>
                <xpath expr="//field[@name='invoice_partner_display_name'][2]" position="replace">
                    <field name="invoice_partner_display_name" attrs="{'column_invisible': True}"/>
                </xpath>

                <field name="name" position="after">
                    <field name="customer_sequence" optional="show"/>
                    <field name="company_code_partner" optional="show"/>
                    <field name="partner_id_name" optional="show" string="Vendor" invisible="context.get('default_move_type') not in ('in_invoice', 'in_refund','in_receipt')"/>
                    <field name="partner_id_parent_name" optional="show" string="Vendor Parent" invisible="context.get('default_move_type') not in ('in_invoice', 'in_refund','in_receipt')"/>
                    <field name="partner_id_name" optional="show" string="Customer D" invisible="context.get('default_move_type') not in ('out_invoice', 'out_refund','out_receipt')"/>
                    <field name="partner_id_parent_name" optional="show" string="Customer Parent" invisible="context.get('default_move_type') not in ('out_invoice', 'out_refund','out_receipt')"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
